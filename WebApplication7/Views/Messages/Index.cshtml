@model IEnumerable<GroupFinder.Models.Message>

@{
    ViewData["Title"] = "Nội dung";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<!-- Button tạo mới -->
<p class="text-right mb-3">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<!-- Bảng hiển thị dữ liệu -->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.GroupId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserId)
                </td>
                <td class="text-center">
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MessageId">Edit</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.MessageId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.MessageId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    body {
        background-color: #f8f9fa;
    }

    .table {
        margin: auto;
        width: 80%;
    }
</style>

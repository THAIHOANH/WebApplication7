@model IEnumerable<GroupFinder.Models.Group>

@{
    ViewData["Title"] = "Nhóm";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<!-- Form tìm kiếm -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Tìm kiếm nhóm..." />
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Đặt lại</a>
</form>

<p class="text-right mb-3">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leader)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leader.UserId)
                </td>
                <td class="text-center">
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.GroupId">Edit</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.GroupId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.GroupId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #f8f9fa;
    }

    .table {
        margin: auto;
        width: 80%;
    }
</style>
